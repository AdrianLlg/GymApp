             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GymApp.Views.Main" >
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Orientation="Vertical" BackgroundColor="White">
                <!--<StackLayout RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width}"
                         RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height}"
                         VerticalOptions="FillAndExpand">
                
                <StackLayout Orientation="Horizontal" BackgroundColor="Black" x:Name="stckButtons">
                    <ImageButton Source="back.png" WidthRequest="32" HeightRequest="32" HorizontalOptions="StartAndExpand" Clicked="OnBackButtonClicked" BackgroundColor="Black" />
                    <ImageButton Source="home.png" WidthRequest="32" HeightRequest="32" HorizontalOptions="CenterAndExpand" Clicked="OnHomeButtonClicked" BackgroundColor="Black" />
                    <ImageButton Source="forward.png" WidthRequest="32" HeightRequest="32" HorizontalOptions="EndAndExpand" Clicked="OnForwardButtonClicked" BackgroundColor="Black" />
